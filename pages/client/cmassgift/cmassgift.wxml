<view class='b-s w-10 bk-c-w gift-ct'>
   <view class='b-s w-10 pic-ct'>
       <swiper indicator-dots="{{indicatorDots}}" class="w-10 o-swiper" style=''  current="{{current}}" interval="{{interval}}" duration="{{duration}}" bindchange="fSwiperChange">
        <block wx:for="{{oGift.giftPictures}}" wx:for-item="oitem" wx:key="id">
          <swiper-item>
              <view class='h-w-10 item-ct'>
                 <image class='h-w-10 item-img' mode='aspectFill' src="{{oitem.url}}" ></image>
                  <view class='f-14 flex-c count-item'><text>{{current+1}}/{{totalPic}}</text></view>
              </view>
          </swiper-item>
        </block>
      </swiper>
      <view class='w-10 f-16 gift-title'>
          {{oGift.name}}
      </view>
      <view wx:if="{{status>0}}" class='b-s f-12 t-a-c gift-statue'>已领取</view>
      <view wx:if="{{isPast&&(!status)}}" class='b-s f-12 t-a-c gift-statue'>您正在浏览的礼品太受欢迎了，已经被一抢而空了~</view>
   </view>
   <view class="b-s b-d g-des-ct" style=''>
     <view class='f-14 des-title'>礼品描述</view>
     <view class='f-12' style='line-height:40rpx;'>
       {{oGift.des}}
     </view>
   </view>
   <view class='flex w-10 b-s fx-jc-sa bottom-ct {{isMyself?"hide":""}} {{(!isPast||(status>0))?"":"hide"}}'>
      <view wx:if="{{status<=0}}" class='f-14 b-s t-a-c cb-btn'>立即领取
         <form  report-submit  bindsubmit="fFormRightNow" > 
            <button class='h-w-10 share-btn' style='border:none;' plain="true" formType="submit"></button>
         </form>
      </view>
      <view wx:if="{{status>0}}" class='f-14 b-s t-a-c cb-btn'>查看地图
         <form  report-submit  bindsubmit="fFormRightMap" > 
            <button class='h-w-10 share-btn' style='border:none;' plain="true" formType="submit"></button>
         </form>
      </view>

      <view class='f-14 b-s t-a-c cb-btn'>分享
          <button  class='h-w-10 share-btn' plain='true' open-type="share" style='border:none;'></button>
      </view>
   </view>
</view>
<view class='mask {{isShowMask?"":"hide"}}'>
     <view class='pop-box flex-c fx-d-col'>
       <view class='f-14 close' bindtap='fClose'>关闭</view>
       <text class='f-14 tex-pd'>请提供手机号哦~它将是你领取礼品的凭证</text>
       <button class='f-14 auth-tel'  open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">授权手机号</button>
     </view>
</view>
<view wx:if="{{aAuthRecoder.length>0}}" class='b-s pop-item  {{iTop?"translate  transition":""}}'>
  <image class='u-title' src='{{currentRecoder.customerLogo}}'></image>
  <text class='f-14 tip'>{{currentRecoder.customerName}}</text>
</view>

<view class='flex-c w-10 b-s  com-bottom-ct {{isMyself?"hide":""}} {{isPast&&(status<=0)?"":"hide"}}'>
      <view class='f-14 b-s t-a-c com-btn-txt'  bindtap='fConnectCst'>联系咨询师</view>
   </view>

