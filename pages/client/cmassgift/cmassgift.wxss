.mask{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.3);
}
.pop-box{
  width: 600rpx;
  height: 300rpx;
  background: #ffffff;
  margin: 0 auto;
  margin-top: 40%;
  border-radius: 8rpx;
  position: relative;
}
.close{
  position: absolute;
  right:10rpx;
  top:5rpx;
}
.tex-pd{
  padding: 0 0 32rpx 0;
}
