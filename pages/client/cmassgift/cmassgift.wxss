.gift-ct{
  padding: 0 0 150rpx;
}
.o-swiper{
  height: 700rpx;
}
.item-ct{
   position: relative;
}
.count-item{
  position: absolute;
  right: 40rpx;
  bottom: 20rpx;
  color: #ffffff;
  padding: 10rpx 0 8rpx 0;
  background: rgba(0,0,0,0.6);
  width: 120rpx;
  border-radius: 30rpx;
}
.gift-title{
 text-align: center;
 padding: 20rpx 0;
}
.gift-statue{
  padding: 20rpx;
  margin: 0 40rpx;
  background: #EDEBFF;
  color: #9083Ed;
}
.g-des-ct{
  box-shadow: 0 0 8rpx 6rpx #eeeeee;
  margin:40rpx;
  padding:0 20rpx 20rpx;
}
.des-title{
  padding: 20rpx 0;
  color: #333333;
}
.bottom-ct{
 position: fixed;
 bottom: 0;
 left: 0;
 padding: 40rpx;
}
.cb-btn{
   border-radius: 20px;
   background-color: #9083ed;
   color: #ffffff;
   padding:0rpx 50rpx;
   width: 250rpx;
   position: relative;
   height: 80rpx;
   line-height: 80rpx;
}
.share-btn{
  position:absolute;
  left: 0;
  top: 0;
 
}
/***********弹出的领取start***********/
.pop-item{
  border-radius: 60rpx;
  padding: 15rpx 25rpx;
  position: absolute;
  top: 20%;
  left:20rpx;
  background: rgba(0, 0, 0, 0.6);
 
}
.u-title{ 
  border-radius: 50%;
  margin-right:20rpx;  
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.tip{
  color: #ffffff;
}
.transition{
  transition: 0.5s;
}
.translate{
  top:10%; 
}
/***********弹出的领取end***********/
