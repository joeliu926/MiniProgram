/* pages/index/detail/cluedetail.wxss */

.page {
  width: 100%;
  margin-top: 0px;
}

.top {
  width: 100%;
  padding-top: 30rpx;
  background-color: white;
  display: block;
}

.top-content {
  margin: 0 30rpx 30rpx 30rpx;
  padding: 30rpx;
  display: block;
  height: 200rpx;
  background-color: #8088f6;
  border-radius: 15rpx;
  color: white;
  font-size: 30rpx;
}

.top-right {
  display: inline-block;
  width: 70%;
  vertical-align: middle;
}

.top-span {
  background-color: #ffa92f;
  border-radius: 5rpx;
  height:30rpx;
  overflow: hidden;
  vertical-align: middle;
  text-align: center;
  line-height: 30rpx;
  font-size: 22rpx;
  padding: 5rpx 8rpx 5rpx 5rpx;
  box-sizing:border-box;
}

.top-state {
  font-size: 26rpx;
  line-height: 50rpx;
  display: block;
}

.top-book {
  margin-top: 30rpx;
  background-color: white;
  color: #8088f6;
  border-radius: 20rpx;
  width: 120rpx;
  line-height: 50rpx;
  height: 50rpx;
  display: block;
  text-align: center;
  vartical-align: middle;
}

.top-imgdiv {
  display: inline-block;
  width: 30%;
  line-height: 200rpx;
  height: 200rpx;
  text-align: center;
  vertical-align: middle;
}

.top-img {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  border-radius: 100rpx;
  border: 5rpx solid #fff;
}

.top-cnt {
  padding: 0 30rpx 30rpx 30rpx;
  display: block;
  font-size: 30rpx;
}

.top-cnt>div {
  display: block;
  height: 70rpx;
}

.top-cnt>div image {
  width: 35rpx;
  height: 35rpx;
  vertical-align: middle;
  border: 5rpx solid #fff;
}

.top-cnt>div span {
  border-radius: 25rpx;
  font-size: 22rpx;
  padding: 8rpx;
  border: 2rpx solid #8088f6;
  color: #8088f6;
  margin-right: 10rpx;
}

.cnt {
  display: block;
  margin-top: 20rpx;
  background-color: white;
}

.cnt-tab {
  border-bottom: 1px solid #eee;
}

.cnt-content {
  padding: 20rpx;
  display: block;
  border-bottom: 1px solid #eee;
}

.cnt-imgdiv {
  display: inline-block;
  width: 15%;
  vertical-align: top;
}

.cnt-imgdiv>image {
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
  border-radius: 100rpx;
  border: 5rpx solid #fff;
}

.cnt-text {
  display: inline-block;
  width: 85%;
  vertical-align: middle;
}

.cnt-text-name {
  display: block;
  font-size: 30rpx;
}

.cnt-text-time {
  display: block;
  font-size: 22rpx;
  color: #7b7b7b;
}

.cnt-text-txt {
  display: block;
  font-size: 28rpx;
  margin: 10rpx 0 0 0;
  color: #7b7b7b;
}

.search-type-item {
  width: 50%;
  height: 50rpx;
  display: inline-block;
  text-align: center;
}

.search-type-top {
  display: block;
  height: 35rpx;
  font-size: 30rpx;
  padding: 20rpx 0 0 0;
}

.search-type-bottom {
  border-bottom: 6rpx solid #8f82ec;
  height: 10rpx;
  width: 30rpx;
  display: inline-block;
}

.search-type-none {
  height: 10rpx;
  width: 30rpx;
  display: inline-block;
}
