</view>
<view class='h-ct w-10' style='display:{{showData==1?"":"none"}}'>
  <view class='b-d'>
    <image class='h-ct w-10 d-img' style='display:none;' src="../../public/images/default-c-icon.png" mode='aspectFill'> </image>
  </view>
  <image class='h-ct w-10' style='' src="../../public/images/appload.png" mode='aspectFill'> </image>
</view>
<!--线索搜索-->
<view class='h-ct w-10' style='display:{{showData==2?"":"none"}};background-color:white;'>
  <div class="opensh">
    <div class="opensh-input">
      <div class='flex input-o'>
        <icon type='search' size='16' bindtap='inputOver'></icon>
        <input class='s-input f-16' style='text-align:left;' bindconfirm="inputOver" name="phonenum" value="{{phonenum}}" bindinput="fInputSearch" focus='{{autoFocus}}' placeholder='请输入客户名称' placeholder-class='f-12 c-9' placeholder-style='font-size:24rpx;color:#999999;'
          maxlength='36' placeholder-class="place"></input>
        <icon bindtap='fClearData' size='16' type='clear' class='{{showicon?"show":"hide"}}'></icon>
      </div>
    </div>
    <div class='opensh-btn'>
      <span bindtap='closeSearch'>取消</span>
    </div>
  </div>
</view>
<!--线索备注-->
<view class='h-ct w-10' style='display:{{showData==3?"":"none"}};background-color:white;'>
  <div>
    <div class="remark">
      <textarea class='s-input f-16 remark-area' bindconfirm="inputOver" name="phonenum" value="{{phonenum}}" placeholder='补充一些线索备注' placeholder-class='f-12 c-9' placeholder-style='font-size:24rpx;color:#999999;'></textarea>
    </div>
    <div class='submit-btn'>
      <div bindtap='closeSearch'>提交</div>
    </div>
  </div>
</view>

<!--关闭备注-->
<view class='h-ct w-10' style='display:{{showData==5?"":"none"}};background-color:white;'>
  <div>
    <div class="close-content">
      <textarea class='s-input f-16 close-area' bindconfirm="inputOver" name="phonenum" value="{{phonenum}}" placeholder='补充关闭线索备注' placeholder-class='f-12 c-9' placeholder-style='font-size:24rpx;color:#999999;'></textarea>
    </div>
    <div class='submit-btn'>
      <div bindtap='closeSearch'>提交</div>
    </div>
  </div>
</view>

<!--联系人-->
<view class='h-ct w-10' style='display:{{showData==4?"":"none"}}'>
  <div>
    <view class='p-d-ct mg-b' style='background-color:white;'>
      <view class='flex bk-c-w fx-jc-sb contect-line'>
        <view class='f-16'>
          姓名
        </view>
        <view class='f-16'>
          <input name="name" class='t-r' value="{{customerInfo.name}}" placeholder-style='font-size:24rpx;color:#999999;' bindinput="fInputName" placeholder='填写姓名'></input>

        </view>
      </view>
      <view class='flex bk-c-w fx-jc-sb contect-line'>
        <view class='f-16'>
          性别
        </view>
        <view class='f-16'>
          <radio-group class="radio-group" bindchange="radioChange">
            <label class="radio" wx:for="{{sexitems}}" wx:for-item="oitem" wx:key="value">
              <radio value="{{oitem.value}}" checked="{{oitem.checked}}" />{{oitem.name}}
            </label>
          </radio-group>
        </view>
      </view>
      <view class='flex bk-c-w fx-jc-sb' style=' margin:0 30rpx;padding:30rpx 0;'>
        <view class='f-16'>
          年龄
        </view>
        <view class='f-16'>
          <input name="name" placeholder-style='font-size:24rpx;color:#999999;' class='t-r' value="{{customerInfo.name}}" bindinput="fInputName" placeholder='输入年龄'></input>

        </view>
      </view>
    </view>
    <view class='p-d-ct mg-b' style='background-color:white;'>
      <view class='flex bk-c-w fx-jc-sb c-p-d contect-line'>
        <view class='f-16'>
          电话
        </view>
        <view class='f-16'>
          <input name="name" placeholder-style='font-size:24rpx;color:#999999;' class='t-r' value="{{customerInfo.name}}" bindinput="fInputName" placeholder='输入电话'></input>

        </view>
      </view>
      <view class='flex bk-c-w fx-jc-sb c-p-d'>
        <view class='f-16'>
          微信
        </view>
        <view class='f-16'>
          <input name="name" placeholder-style='font-size:24rpx;color:#999999;' class='t-r' value="{{customerInfo.name}}" bindinput="fInputName" placeholder='输入微信'></input>
        </view>
      </view>
    </view>
    <div class='submit-btn'>
      <div bindtap='closeSearch'>提交</div>
    </div>
  </div>
</view>