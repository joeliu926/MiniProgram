<wxs src="../../utils/wxs/cutil.wxs" module="util" />
<!--线索例表-->
<view class='h-ct b-s' style='display:{{showData==0?"":"none"}};background-color:white;'>
  <view class='search' style='display:{{menuType?"":"none"}}'>
    <div class="search-type">
      <div bindtap='selectType' data-id='{{item.id}}' wx:for="{{selectItem}}" wx:for-item="item" wx:key="id" class="search-type-item" style="{{item.val?'color:#8F82EC;':''}}">
        <span class="search-type-top">{{item.text}}</span>
        <span class="{{item.val?'search-type-bottom':'search-type-none'}}"></span>
      </div>
    </div>
    <div class="search-btn">
      <span class="search-btn-span">
        <icon type='search' size='22' bindtap='searchBtn'></icon>
      </span>
    </div>
  </view>

  <!--线索列表-->
  <view style='display:{{menuType?"block":"none"}};background-color:white;'>
    <block wx:for="{{culeList}}" wx:for-item="oitem" wx:key="id">
      <view class="list">
        <div class="list-body">
          <div class='list-img' bindtap='openItem' data-Id='{{oitem.id}}'>
            <div style='margin:10rpx 15rpx 0rpx 15rpx;display:block;'>
              <image class='cst-img' src='{{oitem.wxHeadPhoto||"../../public/images/default-title.png"}}'></image>
            </div>
          </div>
          <div class="list-content" bindtap='openItem' data-Id='{{oitem.id}}'>
            <div style='margin-left:10rpx;display:block;'>
              <div class="list-content-top">
                <span class='f-16 list-content-top-r'>{{oitem.name}}</span>
                <span class='f-14 list-content-top-l'>{{'现场咨询'}}</span>
              </div>
              <div class='list-content-btm'>
                <span class='f-14'>项目：{{oitem.desc}}</span>
              </div>
            </div>
          </div>
          <div class='more-btn' style='background-color:#CCCCCC;'>
            <picker class='f-14' style='height:100%;' data-Id='{{oitem.id}}' bindchange="bindPickerChange" mode="selector" range="{{moreItem}}">
              <text class='f-14' style='color:white'>更多</text>
            </picker>
          </div>
          <div class='more-btn' style='background-color:#2FAEFF;'>
            <text bindtap='bookOption' class='f-14' style='color:white'>预约</text>
          </div>
          <div class='more-btn' style='background-color:#FFA92F;'>
            <text bindtap='remarkOption' class='f-14' style='color:white'>备注</text>
          </div>
        </div>
      </view>
    </block>

    <view style='display:block;height:100rpx;background-color:white;margin-top:10rpx; font-size:26rpx;text-align:center;'>
 
    </view>
  </view>


  <!--场景列表-->

  <view style='display:{{menuType?"none":"block"}};background-color:white;'>
    <block wx:for="{{culeList}}" wx:for-item="oitem" wx:key="id">
      <view class="list" style="background-color:white;">
        <div class="list-body" style="width:100%;">
          <div class="list-content" style="width:94%;margin:20rpx 20rpx 15rpx 20rpx;" bindtap='openItem' data-Id='{{oitem.id}}'>
            <div style="padding-left:10rpx;margin: 20rpx  10rpx  10rpx 0;">
              <div class="list-content-top">
                <span class='f-16 list-content-top-r'>{{oitem.name+'aa'}}</span>
                <span class='f-14 list-content-top-l' style="text-align:right;">{{'下午 2：00'}}</span>
              </div>
              <div class='list-content-btm' style="margin: 0  0  10rpx  10rpx;">
                <span class='f-14'>项目：{{oitem.desc}}</span>
              </div>
            </div>
          </div>
        </div>
      </view>
      <view>
      </view>
    </block>

    <view style='display:block;height:100rpx;background-color:white;margin-top:10rpx; font-size:26rpx;text-align:center;'>

    </view>

  </view>
  <view style='display:{{culeList.length==0&&menuType?"":"none"}}'>
    <div class="list-none">
      <div class="list-none-div">
        <icon type='search' size='16'></icon>
      </div>
      <div>您还没有客户哦，您可以点击菜单中间按钮，先创建一个场景分享。</div>
    </div>
  </view>

    <view style='display:{{shareList.length==0&&!menuType?"":"none"}}'>
    <div class="list-none">
      <div class="list-none-div">
        <icon type='search' size='16'></icon>
      </div>
      <div>您还没有过场景哦，您可以点击菜单中间按钮，先创建一个场景分享。</div>
    </div>
  </view>

  <view class='menu'>
    <div class='menu-l' data-Type='1' bindtap='menuClick'>
      <image src='{{menuType?"../../public/images/menu-l-t.png":"../../public/images/menu-l-f.png"}}'></image>
      <span style="{{menuType?'color:#8F82E8;':''}}">线索</span>
    </div>
    <div class="menu-m" data-Type='2' bindtap='menuClick'>
      <image src='../../public/images/clue-addmore.png'></image>
    </div>
    <div class='menu-r' data-Type='3' bindtap='menuClick'>
      <image src='{{menuType?"../../public/images/menu-r-f.png":"../../public/images/menu-r-t.png"}}'></image>
      <span style="{{menuType?'':'color:#8F82E8;'}}">场景</span>
    </div>
  </view>
