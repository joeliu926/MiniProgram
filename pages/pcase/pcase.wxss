.o-flex{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.case-content{
    width: 100%;
    height: 100%;
    padding: 15px;
    box-sizing: border-box;
}
.case-title{
  text-align: center;
  color: #333333 ;
   font-size: 16px;  
}
.case-item-content{
  width: 100%;
  box-sizing: border-box;
  margin: 0 0 20px 0;
  padding: 0
}
.case-item-detail{
   width: 100%;
   margin-top: 20px;
   display: flex;
   flex-wrap:wrap;
}
.case-item{
  box-sizing: border-box;
  background-color: #F7F7F7;
  border-radius: 20px; 
  padding: 0 6px;
  margin:0 5px 15px 0px; 
  color: #666666;
  font-size: 14px;
  height: 25px;
  line-height: 25px;
}
.case-item:hover{
  background-color: #9083ed;
  color: #ffffff;
}
.case-btn-content{
   box-sizing: border-box;
   width: 100%;
   position: fixed;
   bottom: 0px;
   left: 0px; 
  /* background-color: #eaeaea;*/
}
.case-img-btn{
  height: 40px;
  width: 40px;
}
.case-btn-name{
  color: #333333;
  font-size: 15px;

}

::-webkit-scrollbar{
  height: 0;
  width: 0;
 
}


