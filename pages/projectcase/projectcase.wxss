page {
  height: 100%;
  background-color: #fff;
  position: relative;
}

.o-flex {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.case-content {
  width: 100%;
  /* height: 100%; */
  padding: 15px;
  box-sizing: border-box;
  margin-bottom: 100px;
  background: #fff;
}

.case-title {
  text-align: center;
  color: #333;
  font-size: 16px;
}

.case-item-content {
  width: 100%;
  box-sizing: border-box;
  margin: 20px 0 20px 0;
  padding: 0;
}

.case-item-detail {
  width: 100%;
  margin-top: 20px;
  display: flex;
  flex-wrap: wrap;
}

.case-item {
  box-sizing: border-box;
  background-color: #f7f7f7;
  border-radius: 40rpx;
  padding: 10rpx 24rpx;
  margin: 0 20rpx 30rpx 10rpx;
  color: #333;
  font-size: 28rpx;
}

.case-item:hover {
  /* background-color: #9083ed;
  color: #ffffff;*/
}

.case-sele {
  background-color: #9083ed;
  color: #fff;
}

.b-pos {
  height: 40px;
}

.case-btn-content {
  box-sizing: border-box;
  width: 100%;
  position: fixed;
  bottom: 0px;
  left: 0px;
  height: 62px;
  background-color: #fff;
  padding: 4px;
  box-shadow: 2px 2px 10px #909090;
}

.case-img-btn {
  height: 40px;
  width: 40px;
}

.case-btn-name {
  color: #333;
  font-size: 12px;
}

.selBtn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  margin-left:-215rpx;
  z-index: 100;
}
.selend {
  width:450rpx;
  height:80rpx; 
  box-sizing: border-box;
  background-color: #f7f7f7;
  border-radius: 40rpx;
  /* padding: 10rpx 50rpx 0rpx; */
  margin: 0 20rpx 30rpx 0;
  color: #666;
  font-size:30rpx!important;
  line-height:80rpx!important;
  border:none!important;
}
button::after{
  border:none;
}
.tipunable {
  position: fixed;
  top: 0;
  left: 0;
  /* bottom: 120rpx; */
  width: 100%;
  height: 30px;
  line-height: 30px;
  background: #ffbe00;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  z-index: 100;
}


/*选中的状态*/

.active {
  background-color: #9083ed;
  color: #fff;
}

/*不可用状态*/

.unable {
  background-color: #f7f7f7;
  color: #999;
}
