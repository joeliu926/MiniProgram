page{
  height: 100%;
  background-color: #ffffff;
}
.o-flex{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}
.case-content{
    width: 100%;
    height: 100%;
    padding: 15px;
    box-sizing: border-box;
    margin-bottom: 100px;
    background: #ffffff;
}
.case-title{
  text-align: center;
  color: #333333 ;
   font-size: 16px;  
}
.case-item-content{
  width: 100%;
  box-sizing: border-box;
  margin: 0 0 20px 0;
  padding: 0
}
.case-item-detail{
   width: 100%;
   margin-top: 20px;
   display: flex;
   flex-wrap:wrap;
}
.case-item{
  box-sizing: border-box;
  background-color: #F7F7F7;
  border-radius: 40rpx; 
  padding: 10rpx 34rpx;
  margin:0 20rpx 30rpx 0px; 
  color: #666666;
  font-size: 28rpx;

}
